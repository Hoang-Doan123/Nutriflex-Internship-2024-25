<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/network_debug"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvCurrentUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/current_base_url_loading"
        android:textSize="16sp"
        android:background="#F0F0F0"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvDeviceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_information_loading"
            android:textSize="12sp"
            android:background="#F8F8F8"
            android:padding="8dp"
            android:fontFamily="monospace" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnTestConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_connection"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnResetToAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_to_auto_detect"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSetEmulator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_emulator"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnSetRealDevice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_real_device"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout> 