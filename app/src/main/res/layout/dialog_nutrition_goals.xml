<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_your_nutrition_goals"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Daily Calories -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/daily_calories"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDailyCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="200" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Meal Plan Type (read-only) -->
        <TextView
            android:id="@+id/tvMealPlanTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meal_plan_type"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/tvMealPlanType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Meals Per Day -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meals_per_day"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgMealsPerDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rb3Meals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_3_meals"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb4Meals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_4_meals_a" />

            <RadioButton
                android:id="@+id/rb4Meals2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_4_meals_b" />

            <RadioButton
                android:id="@+id/rb5Meals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_5_meals" />

        </RadioGroup>

        <!-- Include Snacks -->
        <CheckBox
            android:id="@+id/cbIncludeSnacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/include_snacks"
            android:layout_marginBottom="16dp" />

        <!-- Dietary Restrictions (read-only) -->
        <TextView
            android:id="@+id/tvDietaryRestrictionsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dietary_restrictions"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/tvDietaryRestrictions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Properties Slider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calories_percentages_preferences"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Protein Slider -->
        <TextView
            android:id="@+id/tvProteinPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein: 25%" />
        <SeekBar
            android:id="@+id/seekProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="25" />

        <!-- Carbohydrate Slider -->
        <TextView
            android:id="@+id/tvCarbPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbohydrate: 55%"
            android:layout_marginTop="8dp" />
        <SeekBar
            android:id="@+id/seekCarb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="55" />

        <!-- Fat Slider -->
        <TextView
            android:id="@+id/tvFatPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fat: 20%"
            android:layout_marginTop="8dp" />
        <SeekBar
            android:id="@+id/seekFat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="20" />

        <TextView
            android:id="@+id/tvMacroSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 100%"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Food Preferences -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:hint="@string/food_preferences_e_g_mediterranean_asian_etc"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFoodPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Allergies -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAllergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="@string/allergies_e_g_nuts_shellfish_etc"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAllergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView> 